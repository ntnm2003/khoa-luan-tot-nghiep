{
  "info": {
    "_postman_id": "smartlearn-api",
    "name": "SmartLearn API",
    "description": "API Testing Collection for SmartLearn Learning Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"student01\",\n  \"email\": \"student01@student.hnue.edu.vn\",\n  \"password\": \"Student@123456\",\n  \"fullName\": \"Nguyễn Văn A\",\n  \"role\": \"student\",\n  \"department\": \"Công nghệ thông tin\",\n  \"campus\": \"Hà Nội\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student001@student.hnue.edu.vn\",\n  \"password\": \"Student@123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set(\"token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Materials",
      "item": [
        {
          "name": "List Materials",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/materials?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "materials"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "category",
                  "value": "lecture",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "database",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Material Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/materials/{{material_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "materials", "{{material_id}}"]
            }
          }
        },
        {
          "name": "Create Material",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{teacher_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Slide bài giảng MongoDB\",\n  \"description\": \"Giới thiệu về MongoDB và NoSQL\",\n  \"course\": \"{{course_id}}\",\n  \"fileType\": \"pdf\",\n  \"fileUrl\": \"https://example.com/mongodb.pdf\",\n  \"fileSize\": 5000000,\n  \"category\": \"lecture\",\n  \"tags\": [\"mongodb\", \"nosql\", \"database\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/materials",
              "host": ["{{base_url}}"],
              "path": ["api", "materials"]
            }
          }
        },
        {
          "name": "Update Material",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{teacher_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Slide bài giảng MongoDB (Updated)\",\n  \"category\": \"lecture\",\n  \"tags\": [\"mongodb\", \"nosql\", \"database\", \"updated\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/materials/{{material_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "materials", "{{material_id}}"]
            }
          }
        },
        {
          "name": "Download Material",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/materials/{{material_id}}/download",
              "host": ["{{base_url}}"],
              "path": ["api", "materials", "{{material_id}}", "download"]
            }
          }
        },
        {
          "name": "Delete Material",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{teacher_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/materials/{{material_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "materials", "{{material_id}}"]
            }
          }
        }
      ]
    },
